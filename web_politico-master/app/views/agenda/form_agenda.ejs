        <div class="col-md-6">
            <div class="form-group">
                <label>Data Início</label> 
                <div class='input-group date myDatepicker'>
                    <input type='text' name="start" id="start" class="form-control" data-inputmask="'mask' : '99/99/9999 99:99'"/>
                    <span class="input-group-addon">
                       <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>    
        
        <div class="col-md-6">
            <div class="form-group">
                <label>Data Fim</label> 
                <div class='input-group date myDatepicker'>
                    <input type='text' name="end" id="end" class="form-control" data-inputmask="'mask' : '99/99/9999 99:99'"/>
                    <span class="input-group-addon">
                       <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>    
        
        <div class="col-md-12 ">
          <div class="form-group">
              <label>Status do Evento/Agenda</label> 
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="col-md-3">
               
                  <div class="radio">
                      <label> 
                        <input type="radio" class="flat" checked id="radio_reuniao" value="a_confirmar" name="status"> <span style="font-size: 14px;background-color: #5c5c8a; color: white"> A Confirmar </span>
                      </label>
                 </div>  
              </div>
               
              <div class="col-md-3">
                <div class="radio">
                  <label>
                    <input type="radio" class="flat" value="confirmado" name="status"> <span style="font-size: 14px;background-color: #00b300; color: white">  Confirmado </span>
                  </label>
                </div>
              </div>

              
              <div class="col-md-3"> 
              <div class="radio">
                <label>
                  <input type="radio" class="flat" value="cancelado" name="status"> <span style="font-size: 14px;background-color: #cc3300; color: white"> Cancelado</span>
                </label>
              </div>
            </div>
            </div>
          </div>
        </div>
</div>