<div class="row">
                    
        <input type="hidden" id="id" name="id"> 
        
        <div class="col-md-12">
            <div class="form-group">
              <label>Título</label> 
              <input type="text" name="title" id="title" class="form-control" value="">
            </div>
        </div>  
        
        
        <div class="col-md-6">
            <div class="form-group">
            <label>Responsável (Local da Reunião)</label>
              <select  class="form-control chosen-ajax-deselect" id="responsavel_id" name="responsavel_id"  data-url = "/contato/get_contatoss">
                
                <option value="" >  </option>
  
              </select>
            </div>
          </div>  

      <div class="col-md-6">
        <div class="form-group">
        <label>Solicitante (Liderança)</label>
          <select  class="form-control chosen-ajax-deselect" id="solicitante_id" name="solicitante_id"  data-url = "/contato/get_contatoss">
            
            <option value="" >  </option>

          </select>
        </div>
      </div>
  
      
      <div class="col-md-12">
        <div class="form-group">
        <label>
          Endereço da Reunião/Evento: 
        </label>  
            <div class="card-block" id="formatted-address2">
        </div>

        </div>
      </div>  

      <div class="col-md-6">
          <div class="form-group">
            <label>Descrição do Evento/Observação</label> 
            <textarea class="form-control" name="description" id="description" rows="5"></textarea>
          </div>
      </div> 

