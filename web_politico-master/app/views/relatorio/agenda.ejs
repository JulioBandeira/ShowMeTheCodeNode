<% include ../template/header %>

<div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="x_panel">
            <div class="x_title">
              <h2> Relatório dos Agendamentos</small></h2>
              <ul class="nav navbar-right panel_toolbox">
                
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <br>
                 <% if(messages.erro)
                   {messages.erro.forEach(function(error){%>
                      <div class="alert alert-danger"><%= error %></div>
                <% })} %>
            
              <form method="POST" action="/relatorio/agenda2">
                <div class="col-md-8 col-md-offset-2">
              
                  <div class="row">
                  <div class="col-md-6 cpf col-sm-12 col-xs-12">
                      <label>Data Inicial</label> 
                      <div class='input-group date myDatepicker'>
                          <input type='text' name="inicio" id="inicio" class="form-control" data-inputmask="'mask' : '99/99/9999'"/>
                          <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                          </span>
                      </div>
                  </div>
                  
                  <div class="col-md-6 cpf col-sm-12 col-xs-12">
                    <label>Data Final</label> 
                    <div class='input-group date myDatepicker'>
                        <input type='text' name="fim" id="fim" class="form-control" data-inputmask="'mask' : '99/99/9999'"/>
                        <span class="input-group-addon">
                          <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                  </div>
              </div>
                <div class="row"> 
                  <div class="col-md-12"> 
                    <button type="submit" class="btn btn-success">Gerar Relatório</button>
                  </div>
                </div>
              </div>
            </form>
      
            </div>
          </div>
        </div>
      </div>

<% include ../template/footer %>