<% include ../template/footer %>
<script src="https://cdn.ckeditor.com/4.10.0/full/ckeditor.js"></script>

<script>
  
CKEDITOR.replace( 'edit');

var tipo = '<%= body.tipo_noticia_img-%>';

$('#tipo_noticia_img').val(tipo)
toogle_div_upload(tipo)

$('#tipo_noticia_img').on('click', function(){
  toogle_div_upload($(this).val())
});

function toogle_div_upload(tipo_img){
  if(tipo_img == 'destaque' || tipo_img == 'comum')  $('.up-img').show();
  else $('.up-img').hide();
}

</script>





