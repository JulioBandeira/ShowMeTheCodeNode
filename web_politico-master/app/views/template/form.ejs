


        
<form method="POST" action="/contato/create">
    <div class="col-md-8 col-md-offset-2">
  <div class="row"> 
    
    <div class="col-md-12">
      <div class="form-group">
       <label>Informe a Tag</label>
      
         <select  class="form-control chosen-ajax-deselect" name="tags" multiple data_url = "/contato/get_tag"></select>
       
         <!-- <input id="tags_" type="text" name="tag" class="form-control" value="social, adverts, sales" /> -->
      </div>
   </div>
  
      <div class="col-md-6">
          <div class="form-group">
            <label>Tipo de Contato </label>
            <select name="tipo_contato" multiple class="form-control chosen-select">
              <option value="colaborador"> Colaborador </option>
              <option value="contato">Contato</option> 
              <option value="fornecedor">Fornecedor</option>  
              <option value="lideranca">Liderença</option>
            </select>
          </div>
        </div>
  
      <div class="col-md-6">
      <div class="form-group">
        <label>Tipo de Pessoa</label>
        <select name="tipo_pessoa" id="tipo_pessoa" class="form-control">
          <option value="pessoa_fisica">Pessoa Física</option>
          <option value="pessoa_juridica">Pessoa Jurídica</option>
        </select>
      </div>
     </div>
  
   
    
    <div class="col-md-7 cpf">
      <div class="form-group">
        <label>CPF</label> 
        <input type="text" name="cpf" class="form-control" data-inputmask="'mask': '999.999.999-99'">
      </div>
    </div>
  
    <div class="col-md-6 cnpj">
        <div class="form-group">
          <label>CNPJ</label>
          <input type="text" name="cnpj" class="form-control" data-inputmask="'mask': '99.999.999/9999-99'"> 
        </div>
      </div>
  
      <div class="col-md-6 razao_social" >
          <div class="form-group">
            <label>Razão Social</label>
            <input type="text" name="razao_social" class="form-control">
          </div>
      </div>
  
      <div class="col-md-6 nome_fantasia">
          <div class="form-group">
            <label>Nome Fantasia</label>
            <input type="text" name="nome_fantasia" class="form-control">
          </div>
      </div>
  
  </div>
  
  <h4> Dados para Contato </h4>
  
  <div class="row">
    
    <div class="col-md-12">
      <div class="form-group">
    <label>Nome</label>
    <input name="nome" class="form-control" placeholder="Informe o nome completo">
  </div>
  </div>
  
      <div class="col-md-6">
          <div class="form-group">
        <label>Celular</label>
        <input name="celular1" class="form-control"  data-inputmask="'mask': '(99) 99999-9999'">
      </div>
      </div>
    
     <!-- <div class="col-md-6">
        <div class="form-group">  
      <label>Celular 2</label>
      <input name="celular2" class="form-control" >
    </div>
    </div> -->
  
      <div class="col-md-6">
          <div class="form-group">
        <label>Email </label>
        <input name="email1" class="form-control" >
      </div>
      </div>
    
     <!-- <div class="col-md-6">
        <div class="form-group">
      <label>Email 2</label>
      <input name="email2" class="form-control" >
    </div>
    </div> -->
    
    </div>
  
  <div class="row">
  
    <div class="col-md-6">
        <div class="form-group">
      <label>Telefone </label>
      <input name="telefone1" class="form-control" data-inputmask="'mask': '(99) 99999-9999'">
    </div>
  
   </div>
  <!-- 
   <div class="col-md-6">
      <div class="form-group">
    <label>Telefone 2</label>
    <input name="telefone2" class="form-control" >
  </div>
  </div> -->
  
  <div class="col-md-12">
      <div class="form-group">
    <label>Empresa</label>
    <input name="empresa" class="form-control" >
  </div>
  </div>
  
  </div>
  
  <h4> Endereço </h4>
  
  <div class="row">
      <div class="col-md-3">
          <div class="form-group">
        <label>CEP</label>
        <input name="cep" id="cep" class="form-control" data-inputmask="'mask': '99999-999'">
      </div>
     </div>
    
     <div class="col-md-2">
        <div class="form-group">
      <label>Cidade</label>
      <input name="cidadeId" class="form-control" >
     </div>
    </div>
  
     <div class="col-md-6">
        <div class="form-group">
      <label>RUA</label>
      <input name="rua" class="form-control" id="rua" >
     </div>
    </div>
  
    <div class="col-md-6">
      <div class="form-group">
    <label>Bairro</label>
    <input name="bairro" class="form-control" id="bairro">
   </div>
  </div>
  
    <div class="col-md-2">
        <div class="form-group">
      <label>NÚMERO</label>
      <input name="numero" class="form-control" id="numero" >
     </div>
    </div>
   
  </div>
  
  <h4>Local de Votação</h4>
  <div class="row">
  
      <div class="col-md-12">
          <div class="form-group">
        <label>Local de Votação</label>
        <input name="local_votacao" class="form-control" >
      </div>
     </div>
  
  </div>
  
  <div class="row"> 
     <div class="col-md-12"> 
      <button type="submit" class="btn btn-success">Salvar</button>
    </div>
  </div>
  </div>
  </form>